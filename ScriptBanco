CREATE TABLE `Ecommerce`.`livro` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `codigo_barras` VARCHAR(155) NOT NULL,
  `autor` VARCHAR(155) NOT NULL,
  `titulo` VARCHAR(155) NOT NULL,
  `ano` VARCHAR(155) NOT NULL,
  `edicao` VARCHAR(155) NULL,
  `numero_paginas` VARCHAR(155) NULL,
  `sinopse` VARCHAR(500) NULL,
  `ativo` TINYINT NULL DEFAULT 1,
  `preco` DECIMAL(5,2) NULL,
  `id_editora` INT NULL,
  `id_dimensao` INT NULL,
  `id_isbn` INT NULL,
  `id_grupolivro` INT NULL,
  PRIMARY KEY (`id`));





CREATE TABLE `Ecommerce`.`dimensoes` (
  `id` INT NOT NULL,
  `altura` DECIMAL(5,2) NULL,
  `largura` DECIMAL(5,2) NULL,
  `peso` DECIMAL(5,2) NULL,
  `profundidade` DECIMAL(5,2) NULL,
  PRIMARY KEY (`id`));



CREATE TABLE `Ecommerce`.`isbm` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `cod_barras` VARCHAR(155) NOT NULL,
  PRIMARY KEY (`id`));



CREATE TABLE `Ecommerce`.`editora` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `nome_editora` VARCHAR(155) NOT NULL,
  PRIMARY KEY (`id`));




CREATE TABLE `Ecommerce`.`grupolivro` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `nome_grupolivro` VARCHAR(155) NULL,
  `margem_lucro` VARCHAR(45) NULL,
  PRIMARY KEY (`id`));






